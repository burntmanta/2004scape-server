[opnpc1,siegfried_erkle]
~chatnpc(neutral, "Hello there and welcome to the shop of useful items. Can I help you at all?");

def_int $option = ~p_choice2("What are you selling?", 1, "No thanks.", 2);
if($option = 1) {
    ~chatplayer(quiz, "What are you selling?");
    ~chatnpc(neutral, "Take a look.");
    ~openshop_activenpc;
} else if ($option = 2) {
    ~chatnpc(neutral, "Okay. Well, if you change your mind, do pop back.");
}
